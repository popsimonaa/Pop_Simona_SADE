@model Pop_Simona_SADE.Models.Current

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Current</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="CurrentName" class="control-label"></label>
                <input asp-for="CurrentName" class="form-control" />
                <span asp-validation-for="CurrentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Particularity" class="control-label"></label>
                <input asp-for="Particularity" class="form-control" />
                <span asp-validation-for="Particularity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                List<Pop_Simona_SADE.Models.ExhibitionViewModels.CurrentPaintingData> paintings = ViewBag.Paintings;
                                foreach (var painting in paintings)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox" name="selectedBooks" value="@painting.PaintingID"
                                               @(Html.Raw(painting.IsBelonged ? "checked=\"checked\"" : "")) />
                                        @painting.PaintingID @: @painting.Title
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
